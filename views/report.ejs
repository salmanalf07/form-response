<link href="/assets/css/dataTables.bootstrap4.min.css" />
<style>
  .align {
    width: 50%;
    display: inline-block;
  }
  .r {
    text-align: right;
  }
  .l {
    text-align: left;
  }
  .capt {
    text-transform: capitalize;
  }
