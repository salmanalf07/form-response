              id="form-add"
              action="/reportQuistionnaire/graph"
            >
              <div class="row mb-3">
                <div class="col-md">
                  <label class="form-label" for="date_start">Date Start</label>
                  <input
                    type="date"
                    class="form-control"
                    name="date_start"
                    id="date_start"
                    required
                  />
                </div>
                <div class="col-md">
                  <label class="form-label" for="date_end">Date End</label>
                  <input
                    type="date"
                    class="form-control"
                    name="date_end"
                    id="date_end"
                    required
                  />
                </div>
              </div>

              <button id="in" type="submit" class="btn btn-primary submit">
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- / Content -->

